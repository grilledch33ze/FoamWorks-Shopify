<div class="our-collections">
  <div class="heading-container">
    <h2 class="heading-4">{{ section.settings.title }}</h2>
  </div>
  <div class="our-collection">
    <div class="container-3">
      {% for block in section.blocks %}
        <a href="{{ block.settings.collection.url }}" class="background-image-item" style="background-image: url('{% if block.settings.image %}{{ block.settings.image | image_url: width: 500 }}{% else %}{{ block.settings.collection.image | image_url: width: 500 }}{% endif %}');">
          <div class="text-4">{{ block.settings.collection.title }}</div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .our-collections {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    padding: 48px 0px;
    position: relative;
    align-self: stretch;
    width: 100%;
    flex: 0 0 auto;
    background-color: #ffffff;
  }

  .heading-container {
    display: flex;
    width: 100%;
    max-width: 1280px;
    align-items: center;
    justify-content: center;
    gap: 24px;
    padding: 0px 32px;
    position: relative;
    flex: 0 0 auto;
  }

  .heading-4 {
    position: relative;
    margin-top: -1px;
    font-family: "Inter", Helvetica;
    font-weight: 600;
    color: rgba(24, 29, 39, 1);
    font-size: 36px;
    text-align: center;
    letter-spacing: -0.72px;
    line-height: 44px;
  }

  .our-collection {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    padding: 24px 16px;
    position: relative;
    flex: 0 0 auto;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 16px;
    border: 1px solid rgba(245, 245, 245, 1);
    box-shadow: 0px 4px 6px -2px rgba(10, 13, 18, 0.03), 0px 12px 16px -4px rgba(10, 13, 18, 0.08);
  }

  .container-3 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;
    padding: 0px 32px;
    position: relative;
    flex-wrap: wrap;
  }

  .background-image-item {
    display: flex;
    flex-direction: column;
    width: 218px;
    height: 218px;
    align-items: flex-start;
    justify-content: flex-end;
    gap: 15px;
    padding: 10px;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background-size: cover;
    background-position: 50% 50%;
    text-decoration: none;
    background-color: rgba(213, 215, 218, 1);
  }

  .text-4 {
    position: relative;
    align-self: stretch;
    font-family: "Inter", Helvetica;
    font-weight: 700;
    color: #ffffff;
    font-size: 16px;
    letter-spacing: 0px;
    line-height: 24px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  @media (max-width: 768px) {
    .container-3 {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Collection"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Grid"
    }
  ]
}
{% endschema %}