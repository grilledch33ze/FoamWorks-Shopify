<div class="hi-fi-product-page">
  <!-- Product Header -->
  <div class="contact-page-header">
    <div class="container-2">
      <!-- Product Image -->
      <div class="image-container">
        {% if product.featured_image %}
          <div class="image" style="background-image: url('{{ product.featured_image | image_url: width: 800 }}');"></div>
        {% else %}
          <div class="image placeholder-product-img">
            <span>{{ product.title }}</span>
          </div>
        {% endif %}
      </div>

      <!-- Product Info -->
      <div class="content-wrapper">
        <div class="content-2">
          <div class="div-2">
            <h1 class="heading">{{ product.title }}</h1>
            <p class="supporting-text">{{ product.description | default: "High-definition, impact-resistant architectural accent perfect for window surrounds and entryway arches." }}</p>
            <div class="check-item-text">
              <div class="text-wrap">
                <div class="text-wrapper">{{ product.price | money }}</div>
              </div>
            </div>
          </div>

          <div class="details">
            <form action="/cart/add" method="post" class="product-form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              
              <div class="div-3">
                <!-- Quantity Selector -->
                <div class="input-field-base-wrapper">
                  <div class="input-field-base">
                    <div class="input-with-label">
                      <div class="text-wrapper-2">Quantity</div>
                      <div class="pagination">
                        <div class="pagination-button">
                          <div class="minus-wrapper" onclick="decrementQuantity()">
                            <div class="minus-text">−</div>
                          </div>
                          <div class="pagination-button-2">
                            <div class="content-4">
                              <input type="number" name="quantity" id="quantity" value="1" min="1" class="quantity-input">
                            </div>
                          </div>
                          <div class="plus-wrapper" onclick="incrementQuantity()">
                            <div class="plus-text">+</div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Add to Cart Button -->
              <div class="actions">
                <div class="button-base-wrapper">
                  <button type="submit" class="button-base-2" {% unless product.available %}disabled{% endunless %}>
                    <div class="text-3">
                      {% if product.available %}
                        Add To Cart
                      {% else %}
                        Sold Out
                      {% endif %}
                    </div>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Features Section -->
  <div class="features-section">
    <div class="container-3">
      <div class="heading-and-wrapper">
        <div class="heading-and">
          <div class="div-3">
            <h2 class="heading-2">Key Features</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="container-4">
      <div class="content-5">
        <div class="feature-text">
          <div class="featured-icon">
            <div class="icon-circle">✓</div>
          </div>
          <div class="text-and-supporting">
            <div class="text-4">Durable</div>
            <p class="supporting-text-2">Built to last with premium materials</p>
          </div>
        </div>
        <div class="feature-text">
          <div class="featured-icon">
            <div class="icon-circle">☂</div>
          </div>
          <div class="text-and-supporting">
            <div class="text-4">Weather Resistant</div>
            <div class="supporting-text-2">Withstands harsh outdoor conditions</div>
          </div>
        </div>
        <div class="feature-text">
          <div class="featured-icon">
            <div class="icon-circle">⚡</div>
          </div>
          <div class="text-and-supporting">
            <div class="text-4">Easy Installation</div>
            <p class="supporting-text-2">Simple setup with included hardware</p>
          </div>
        </div>
        <div class="feature-text">
          <div class="featured-icon">
            <div class="icon-circle">⚙</div>
          </div>
          <div class="text-and-supporting">
            <div class="text-4">Customizable</div>
            <p class="supporting-text-2">Multiple sizes and finishes available</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- You May Also Like -->
  {% if collection.products.size > 1 %}
    <div class="frame-3">
      <div class="text-wrapper-4">You May Also Like</div>
      <div class="frame-4">
        {% for related_product in collection.products limit: 3 %}
          {% if related_product.id != product.id %}
            <div class="frame-5">
              <a href="{{ related_product.url }}" class="frame-6-link">
                {% if related_product.featured_image %}
                  <div class="frame-6" style="background-image: url('{{ related_product.featured_image | image_url: width: 500 }}');"></div>
                {% else %}
                  <div class="frame-6 placeholder-related">
                    <span>{{ related_product.title }}</span>
                  </div>
                {% endif %}
              </a>
              <div class="div-2">
                <div class="div-6">
                  <div class="div-3">
                    <div class="heading-and-icon">
                      <h3 class="heading-3">{{ related_product.title }}</h3>
                    </div>
                    <div class="supporting-text-4">{{ related_product.type | default: "Architectural Accent" }}</div>
                    <div class="subheading">{{ related_product.price | money }}</div>
                  </div>
                </div>
                <form action="/cart/add" method="post">
                  <input type="hidden" name="id" value="{{ related_product.variants.first.id }}">
                  <button type="submit" class="button-base-wrapper">
                    <div class="button-base-4">
                      <div class="text-3">Add To Cart</div>
                    </div>
                  </button>
                </form>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

<script>
function incrementQuantity() {
  const input = document.getElementById('quantity');
  input.value = parseInt(input.value) + 1;
}

function decrementQuantity() {
  const input = document.getElementById('quantity');
  if (parseInt(input.value) > 1) {
    input.value = parseInt(input.value) - 1;
  }
}
</script>

