<div class="products-page">
  <!-- Breadcrumb -->
  <div class="breadcrumb-section">
    <div class="container">
      <div class="breadcrumb">Home &gt; {{ collection.title }}</div>
      <h1 class="page-heading">{{ collection.title }}</h1>
    </div>
  </div>

  <!-- Main Content -->
  <div class="products-container">
    <div class="main-wrapper">
      
      <!-- Sidebar Filters -->
      <aside class="sidebar">
        <h3 class="filter-heading">Filters</h3>
        
        <!-- Search -->
        <div class="filter-search">
          <input type="text" placeholder="Search" class="filter-search-input">
        </div>

        <!-- Category Filter -->
        <div class="filter-group">
          <div class="filter-header">Category</div>
          <div class="filter-options">
            {% for collection in collections %}
              <label class="filter-option">
                <input type="checkbox" class="filter-checkbox">
                <span>{{ collection.title }}</span>
              </label>
            {% endfor %}
          </div>
        </div>
      </aside>

      <!-- Products Grid -->
      <div class="products-content">
        <!-- Sort -->
        <div class="sort-bar">
          <button class="sort-button">Sort By</button>
        </div>

        <!-- Product Cards -->
        <div class="products-grid">
          {% for product in collection.products %}
            <div class="product-card">
              <a href="{{ product.url }}" class="product-image" style="background-image: url('{{ product.featured_image | image_url: width: 400 }}');">
                {% unless product.featured_image %}
                  <div class="placeholder-image">No Image</div>
                {% endunless %}
              </a>
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                <p class="product-type">{{ product.type }}</p>
                <p class="product-price">{{ product.price | money }}</p>
                <form action="/cart/add" method="post">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="add-to-cart-btn">Add To Cart</button>
                </form>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="page-btn">Previous</a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="page-num">{{ part.title }}</a>
              {% else %}
                <span class="page-num active">{{ part.title }}</span>
              {% endif %}
            {% endfor %}
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="page-btn">Next</a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .products-page {
    width: 100%;
    background: #fff;
  }

  /* Breadcrumb */
  .breadcrumb-section {
    background: #f5f5f5;
    padding: 32px 0;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .breadcrumb {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: #175CD3;
    margin-bottom: 12px;
  }

  .page-heading {
    font-family: "Inter", sans-serif;
    font-weight: 700;
    font-size: 36px;
    color: #101828;
    margin: 0;
  }

  /* Main Layout */
  .products-container {
    max-width: 1340px;
    margin: 48px auto;
    padding: 0 32px;
  }

  .main-wrapper {
    display: flex;
    gap: 32px;
  }

  /* Sidebar */
  .sidebar {
    width: 280px;
    flex-shrink: 0;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 24px;
    height: fit-content;
    position: sticky;
    top: 100px;
  }

  .filter-heading {
    font-family: "Inter", sans-serif;
    font-weight: 700;
    font-size: 16px;
    margin-bottom: 16px;
  }

  .filter-search {
    margin-bottom: 24px;
  }

  .filter-search-input {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid #d5d7da;
    border-radius: 8px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
  }

  .filter-group {
    margin-bottom: 24px;
  }

  .filter-header {
    font-family: "Inter", sans-serif;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 12px;
    padding: 8px 12px;
    background: #f9fafb;
    border-radius: 6px;
  }

  .filter-options {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .filter-option {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    cursor: pointer;
    border-radius: 6px;
  }

  .filter-option:hover {
    background: #f9fafb;
  }

  .filter-checkbox {
    width: 18px;
    height: 18px;
  }

  /* Products Content */
  .products-content {
    flex: 1;
  }

  .sort-bar {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 24px;
  }

  .sort-button {
    padding: 10px 16px;
    background: #fff;
    border: 1px solid #d5d7da;
    border-radius: 8px;
    font-family: "Inter", sans-serif;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-bottom: 48px;
  }

  .product-card {
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0px 12px 24px rgba(0,0,0,0.1);
  }

  .product-image {
    display: block;
    width: 100%;
    height: 280px;
    background-size: cover;
    background-position: center;
    background-color: #f5f5f5;
    position: relative;
  }

  .placeholder-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: "Inter", sans-serif;
    color: #999;
  }

  .product-info {
    padding: 24px;
  }

  .product-title {
    font-family: "Inter", sans-serif;
    font-weight: 600;
    font-size: 20px;
    color: #101828;
    margin: 0 0 8px 0;
  }

  .product-type {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: #535862;
    margin: 0 0 12px 0;
  }

  .product-price {
    font-family: "Inter", sans-serif;
    font-weight: 600;
    font-size: 18px;
    color: #175CD3;
    margin: 0 0 16px 0;
  }

  .add-to-cart-btn {
    width: 100%;
    padding: 12px 20px;
    background: #1849A9;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-family: "Inter", sans-serif;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .add-to-cart-btn:hover {
    background: #1570EF;
  }

  /* Pagination */
  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 48px;
  }

  .page-btn, .page-num {
    padding: 10px 16px;
    background: #fff;
    border: 1px solid #d5d7da;
    border-radius: 8px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    text-decoration: none;
    color: #344054;
  }

  .page-num.active {
    background: #f9fafb;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .main-wrapper {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      position: relative;
      top: 0;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Collection Products",
  "settings": []
}
{% endschema %}