<div class="products-section">
  <!-- Breadcrumb Header -->
  <div class="header-section">
    <div class="container-header">
      <div class="content-header">
        <div class="heading-and">
          <div class="breadcrumb-heading">
            <div class="subheading">Home &gt; Products</div>
            <h1 class="heading">{{ collection.title }}</h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Section: Sidebar + Products -->
  <div class="section">
    <div class="container-2">
      
      <!-- Sidebar Navigation -->
      <aside class="sidebar-navigation">
        <div class="content-2">
          <div class="nav">
            <!-- Filters Header -->
            <header class="header">
              <div class="text-wrapper">Filters</div>
            </header>

            <!-- Search -->
            <div class="search">
              <div class="select">
                <div class="select-input-base">
                  <div class="input-with-label">
                    <div class="input">
                      <div class="content-3">
                        <input class="text" placeholder="Search" type="text" id="product-search">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Filters -->
            <div class="navigation">
              <!-- Category Filter -->
              <div class="div-2">
                <div class="nav-item-base">
                  <div class="content-4">
                    <div class="text-2">Category</div>
                  </div>
                </div>
                <div class="menu">
                  {% for collection_item in collections %}
                    {% if collection_item.products.size > 0 %}
                      <div class="content-wrapper">
                        <div class="content-5">
                          <div class="checkbox">
                            <div class="checkbox-base-2"></div>
                          </div>
                          <a href="{{ collection_item.url }}" class="text-2">{{ collection_item.title }}</a>
                        </div>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </aside>

      <!-- Products Content -->
      <div class="content-6">
        <!-- Sort Button -->
        <div class="button-base">
          <div class="text-4">Sort By</div>
        </div>

        <!-- Products Grid -->
        {% paginate collection.products by 9 %}
          <div class="products-grid">
            {% for product in collection.products %}
              <div class="product-card">
                <a href="{{ product.url }}" class="image-link">
                  {% if product.featured_image %}
                    <div class="image" style="background-image: url('{{ product.featured_image | image_url: width: 400 }}');"></div>
                  {% else %}
                    <div class="image placeholder-img">
                      <span>No Image</span>
                    </div>
                  {% endif %}
                </a>
                <div class="content-7">
                  <div class="div-2">
                    <div class="product-details">
                      <div class="heading-and-icon">
                        <h3 class="heading-2">{{ product.title }}</h3>
                      </div>
                      <div class="supporting-text">{{ product.type }}</div>
                      <div class="subheading-2">{{ product.price | money }}</div>
                    </div>
                  </div>
                  <form action="/cart/add" method="post">
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                    <button type="submit" class="button">
                      <div class="button-base-2">
                        <div class="text-5">Add To Cart</div>
                      </div>
                    </button>
                  </form>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Pagination -->
          {% if paginate.pages > 1 %}
            <div class="pagination">
              <div class="pagination-button">
                {% if paginate.previous %}
                  <a href="{{ paginate.previous.url }}" class="pagination-button-2">
                    <div class="text-6">Previous</div>
                  </a>
                {% endif %}

                {% for part in paginate.parts %}
                  {% if part.is_link %}
                    <a href="{{ part.url }}" class="pagination-button-4">
                      <div class="content-8">
                        <div class="text-8">{{ part.title }}</div>
                      </div>
                    </a>
                  {% else %}
                    <div class="pagination-button-3">
                      <div class="content-8">
                        <div class="text-7">{{ part.title }}</div>
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}

                {% if paginate.next %}
                  <a href="{{ paginate.next.url }}" class="pagination-button-5">
                    <div class="text-6">Next</div>
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endpaginate %}
      </div>
    </div>
  </div>
