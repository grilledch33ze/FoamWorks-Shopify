<div class="features-section">
  <div class="content-wrapper">
    <div class="heading-and-wrapper">
      <div class="heading-and-2">
        <div class="div-2">
          <div class="subheading">{{ section.settings.subtitle }}</div>
          <h2 class="heading-2">{{ section.settings.title }}</h2>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container-wrapper">
    <div class="container-2">
      <div class="content-2">
        {% if section.settings.collection != blank %}
          {% for product in collections[section.settings.collection].products limit: 4 %}
            <div class="product-card">
              <div class="image" style="background-image: url('{{ product.featured_image | image_url: width: 400 }}');"></div>
              <div class="content-3">
                <div class="heading-and-text-wrapper">
                  <div class="div-2">
                    <div class="heading-and-icon">
                      <h3 class="heading-3">{{ product.title }}</h3>
                    </div>
                    <div class="supporting-text">{{ product.type }}</div>
                    <div class="subheading-2">{{ product.price | money }}</div>
                  </div>
                </div>
                <form action="/cart/add" method="post">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="button-base-wrapper">
                    <div class="button-base-2">
                      <div class="text-3">Add To Cart</div>
                    </div>
                  </button>
                </form>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <p style="text-align: center; width: 100%; padding: 40px;">Please select a collection in theme settings.</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

