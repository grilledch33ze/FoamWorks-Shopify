<div class="site-header-wrapper">
  <header class="site-header">
    <!-- Logo -->
    <a href="/" class="logo-link">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="logo-img" width="200" height="200">
      {% else %}
        <span class="logo-text">{{ shop.name }}</span>
      {% endif %}
    </a>

    <!-- Navigation -->
    <nav class="main-nav">
      <a href="/" class="nav-link">Home</a>
      <a href="/collections/keystones-corbels" class="nav-link">Keystones & Corbels</a>
      <a href="/collections/wall-plaques" class="nav-link">Wall Plaques</a>
      <a href="/collections/capitals" class="nav-link">Capitals</a>
      <a href="/collections/vents-grilles" class="nav-link">Vents & Grilles</a>
      <a href="/collections/moulds" class="nav-link">Moulds</a>
    </nav>

    <!-- Search & Cart -->
    <div class="header-actions">
      <form action="/search" method="get" class="search-form">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="search-icon">
          <path d="M17.5 17.5L13.875 13.875M15.8333 9.16667C15.8333 12.8486 12.8486 15.8333 9.16667 15.8333C5.48477 15.8333 2.5 12.8486 2.5 9.16667C2.5 5.48477 5.48477 2.5 9.16667 2.5C12.8486 2.5 15.8333 5.48477 15.8333 9.16667Z" stroke="#667085" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <input type="text" name="q" placeholder="Search" class="search-input">
      </form>
      <a href="/cart" class="cart-link">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </header>
</div>

<style>
/* CRITICAL: Hide Dawn's default header */
.shopify-section-group-header-group,
.header-wrapper,
shopify-section[id*="header"] {
  display: none !important;
}

/* Header Container */
.site-header-wrapper {
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.site-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1440px;
  margin: 0 auto;
  padding: 20px 32px;
  gap: 40px;
}

/* Logo */
.logo-link {
  display: flex;
  align-items: center;
  text-decoration: none;
}

.logo-img {
  max-height: 32px;
  width: auto;
}

.logo-text {
  font-family: "Inter", Helvetica, sans-serif;
  font-weight: 700;
  font-size: 20px;
  color: #000;
}

/* Navigation - NO BOXES, CLEAN */
.main-nav {
  display: flex;
  align-items: center;
  gap: 32px;
  flex: 1;
  justify-content: center;
}

.nav-link {
  font-family: "Inter", Helvetica, sans-serif;
  font-weight: 600;
  font-size: 16px;
  color: #000;
  text-decoration: none;
  white-space: nowrap;
  transition: color 0.2s;
  /* NO BORDER, NO BOX */
}

.nav-link:hover {
  color: #175CD3;
}

/* Header Actions */
.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
}

.search-form {
  display: flex;
  align-items: center;
  gap: 8px;
  background-color: #f5f5f5;
  padding: 8px 14px;
  border-radius: 20px;
}

.search-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.search-input {
  border: none;
  background: transparent;
  font-family: "Inter", Helvetica, sans-serif;
  font-size: 14px;
  color: #000;
  outline: none;
  width: 180px;
}

.search-input::placeholder {
  color: #999;
}

.cart-link {
  display: flex;
  align-items: center;
  color: #000;
  transition: color 0.2s;
}

.cart-link:hover {
  color: #175CD3;
}

.cart-link svg {
  width: 24px;
  height: 24px;
}

/* Responsive */
@media (max-width: 1024px) {
  .main-nav {
    gap: 20px;
  }
  
  .nav-link {
    font-size: 14px;
  }
}

@media (max-width: 768px) {
  .site-header {
    flex-wrap: wrap;
    padding: 16px;
  }
  
  .main-nav {
    order: 3;
    width: 100%;
    margin-top: 16px;
    overflow-x: auto;
    justify-content: flex-start;
    gap: 16px;
  }
  
  .search-input {
    width: 120px;
  }
}
</style>

{% schema %}
{
  "name": "Header Custom",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    }
  ]
}
{% endschema %}