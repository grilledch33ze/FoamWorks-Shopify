<div class="CTA-section">
  <div class="container-4">
    <div class="content-5">
      <div class="heading-and-2">
        <h2 class="heading-5">{{ section.settings.title }}</h2>
        <p class="p">{{ section.settings.subtitle }}</p>
      </div>
    </div>
    <div class="content-6">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <p style="color: green; text-align: center;">Thanks! We'll get back to you soon.</p>
        {% endif %}
        
        <div class="form">
          <div class="form-fields">
            <div class="input-field">
              <div class="div-3">
                <label class="label-2" for="contact-name">Name</label>
                <div class="input-2">
                  <div class="content-7">
                    <input class="text-5" name="contact[name]" placeholder="Your name" type="text" id="contact-name" required />
                  </div>
                </div>
              </div>
            </div>

            <div class="input-field">
              <div class="div-3">
                <label class="label-2" for="contact-email">Email</label>
                <div class="input-2">
                  <div class="content-7">
                    <input class="text-5" name="contact[email]" placeholder="you@company.com" type="email" id="contact-email" required />
                  </div>
                </div>
              </div>
            </div>

            <div class="textarea-input-field">
              <div class="div-4">
                <label class="label-2" for="contact-message">How can we help?</label>
                <div class="input-4">
                  <textarea class="text-7" name="contact[body]" placeholder="Tell us a little about the project..." id="contact-message" required></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="actions">
          <button type="submit" class="button-base-wrapper">
            <div class="button-base-3">
              <div class="text-3">Send Message</div>
            </div>
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>

